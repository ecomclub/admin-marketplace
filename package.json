  "dependencies": {
    "@ecomplus/apps-manager": "^0.3.2",
    "@ecomplus/client": "^2.1.3",
    "@ecomplus/i18n": "^1.16.1",
    "@ecomplus/utils": "^1.4.1",
    "babel-runtime": "^6.26.0",
    "bootstrap-vue": "^2.18.1",
    "core-js": "^3.7.0",
    "lodash.clonedeep": "^4.5.0",
